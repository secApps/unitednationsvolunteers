<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_author_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contact_name"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorLighterBlue"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tools:text="Mahmud Jarman" />
        <TextView
            android:id="@+id/contact_email"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#424242"
            android:gravity="center_vertical"
            tools:text="someauthor@email.com" />
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/call"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:tint="#9E9E9E"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:src="@drawable/ic_call_black_24px"/>
            <ImageButton
                android:id="@+id/email"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:tint="#9E9E9E"
                android:src="@drawable/ic_email_black_24px"/>
            <ImageButton
                android:id="@+id/sms"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:tint="#9E9E9E"
                android:src="@drawable/ic_textsms_black_24px"/>
            <ImageButton
                android:id="@+id/chat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:tint="#9E9E9E"
                android:src="@drawable/ic_comments"/>
            <ImageButton
                android:id="@+id/loc"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:tint="#F44336"
                android:src="@drawable/ic_location_on_black_24px"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_location_on_black_24px"
        android:layout_height="wrap_content">

    </ImageView>



</LinearLayout>